# WC (Workflow Controller) Environment Configuration Template
#
# Copy this file to .env and adjust the values as needed.
# All configuration values can be set via environment variables.

# ========== WC Service Configuration ==========
WC_HOST=0.0.0.0
WC_PORT=8000

# ========== TM Configuration ==========
TM_BASE_URL=http://localhost:8001

# ========== RM Configuration ==========
# Note: These URLs should point to the actual RM HTTP services
# If RMs don't have HTTP interfaces yet, you'll need to implement them
FLIGHTS_RM_URL=http://localhost:8002
HOTELS_RM_URL=http://localhost:8003
CARS_RM_URL=http://localhost:8004
CUSTOMERS_RM_URL=http://localhost:8005

# ========== HTTP Timeout Configuration ==========
HTTP_CONNECT_TIMEOUT=5
HTTP_READ_TIMEOUT=30

# ========== Logging Configuration ==========
LOG_LEVEL=INFO
LOG_JSON=false

# ========== Advanced Configuration ==========
# Automatically abort transaction on error
AUTO_ABORT_ON_ERROR=true

# Enable /admin/die endpoint (disable in production)
ENABLE_DIE=true
